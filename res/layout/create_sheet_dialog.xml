<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black" >

    <EditText
        android:id="@+id/create_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="シートタイトル"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/create_sheet_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_sheet_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="シートコメント"
        android:inputType="text" />

    <Button
        android:id="@+id/create_sheet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/create_sheet_title"
        android:layout_below="@+id/create_sheet_comment"
        android:layout_marginTop="20dp"
        android:text="参照" />

    <TextView
        android:id="@+id/create_sheet_showPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/create_sheet_button"
        android:layout_alignLeft="@+id/create_sheet_title"
        android:layout_alignTop="@+id/create_sheet_button"
        android:layout_toLeftOf="@+id/create_sheet_button"
        android:gravity="center_vertical"
        android:hint="背景画像パス"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>