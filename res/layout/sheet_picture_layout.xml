<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/sheet_picture_item_imaeg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/koukoku" />

    <ScrollView
        android:id="@+id/sheet_picture_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LinearLayout1"
        android:layout_below="@+id/sheet_picture_item_imaeg1" >

        <LinearLayout
            android:id="@+id/sheet_picture_scrollLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/sheet_music_changeButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:tag="change"
                android:text="â‡”"
                android:textSize="26sp" />

            <ImageButton
                android:id="@+id/sheet_music_rewinding_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:background="@drawable/dummy"
                android:scaleType="fitCenter"
                android:src="@drawable/button3"
                android:tag="rewinding" />

            <ImageButton
                android:id="@+id/sheet_music_playBack_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:background="@drawable/dummy"
                android:scaleType="fitCenter"
                android:src="@drawable/button1"
                android:tag="playBack" />

            <ImageButton
                android:id="@+id/sheet_music_fastForwarding_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:background="@drawable/dummy"
                android:scaleType="fitCenter"
                android:src="@drawable/button2"
                android:tag="fastForwarding" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>